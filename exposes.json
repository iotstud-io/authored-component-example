{
    "name": "authored-component-example",
    "version": "v0.0.23",
    "css": [],
    "components": [
        {
            "name": "GenericClimateSensor",
            "defaultExport": true,
            "description": "Generic temperature/humidity component. Device should provide temperature in Celsius or Fahrenheit, and humidity as percentage.",
            "capabilities": {
                "temp_celcius": "optional",
                "temp_fahrenheit": "optional",
                "humidity": "optional"
            },
            "settings": [
                {
                    "name": "temperature_format",
                    "label": "Temperature Format",
                    "description": "Choose between Celsius and Fahrenheit.",
                    "default": "f",
                    "options": [
                        { "value": "c", "label": "Celsius" },
                        { "value": "f", "label": "Fahrenheit" }
                    ]
                }
            ]
        },
        {
            "name": "OrgLocation",
            "defaultExport": true,
            "description": "Generic display of a location in the org hierarchy tree.",
            "capabilities": {},
            "settings": [
                {
                    "name": "drill_to",
                    "label": "Location to Drill To",
                    "description": "Choose where in the Org Hierarchy tree to show.",
                    "default": "unit",
                    "options": [
                        { "value": "unit", "label": "Unit" },
                        { "value": "zone", "label": "Zone" },
                        { "value": "building", "label": "Building" },
                        { "value": "property", "label": "Property" }
                    ]
                }
            ]
        },
        {
            "name": "CngSensor",
            "defaultExport": true,
            "description": "Generic display of a Compressed Natural Gas sensor.",
            "capabilities": {
                "cng": "optional"
            },
            "settings": []
        }
    ]
}